<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Silahkan centang pada hari yang anda pilih :"
            android:textColor="#000" />

        <CheckBox
            android:id="@+id/cb_senin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senin" />

        <CheckBox
            android:id="@+id/cb_selasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selasa" />

        <CheckBox
            android:id="@+id/cb_rabu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rabu" />

        <CheckBox
            android:id="@+id/cb_kamis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kamis" />

        <CheckBox
            android:id="@+id/cb_jumat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumat" />

        <CheckBox
            android:id="@+id/cb_sabtu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sabtu" />

        <CheckBox
            android:id="@+id/cb_minggu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minggu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="Waktu"
                android:textColor="#000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/textView2"
                app:srcCompat="@drawable/ic_clock" />

            <TextView
                android:id="@+id/tv_clock"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/imageView2"
                android:text="00 : 00"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rdiGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdi_once"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Sekali" />

                <RadioButton
                    android:id="@+id/rdi_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berulang" />

            </RadioGroup>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>